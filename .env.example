# Environment variables for RealWorth.ai
# Copy this file to .env.local and fill in your values
# For Vercel deployment, set these in Project Settings > Environment Variables

# =============================================================================
# GOOGLE / GEMINI
# =============================================================================

# Gemini API Key (SECRET - server only)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"

# Google OAuth Client ID (PUBLIC)
# Get from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your-google-client-id"

# Google Client Secret (SECRET - server only)
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# SUPABASE
# =============================================================================

# Supabase Project URL (PUBLIC)
# Get from: Supabase Dashboard > Project Settings > API
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"

# Supabase Anon Key (PUBLIC - safe with RLS enabled)
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Supabase Service Role Key (SECRET - bypasses RLS, server only)
# Only needed for admin operations
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# =============================================================================
# STRIPE
# =============================================================================

# Stripe Secret Key (SECRET - server only)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_live_or_sk_test_..."

# Stripe Webhook Secret (SECRET - for webhook verification)
# Get from: https://dashboard.stripe.com/webhooks > Select endpoint > Signing secret
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Pro Price ID
# Get from: https://dashboard.stripe.com/products > RealWorth Pro > Price ID
STRIPE_PRO_PRICE_ID="price_..."

# =============================================================================
# ANALYTICS
# =============================================================================

# Google Analytics 4 Measurement ID (PUBLIC)
# Get from: https://analytics.google.com > Admin > Data Streams > Web > Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# =============================================================================
# APP CONFIG (Optional)
# =============================================================================

# App URL (defaults to https://realworth.ai in production)
NEXT_PUBLIC_APP_URL="http://localhost:3001"
